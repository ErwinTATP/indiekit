{
  "private": true,
  "name": "@paulrobertlloyd/indiekit",
  "version": "0.1.0",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "homepage": "https://paulrobertlloyd.github.io/indiekit/",
  "bugs": "https://github.com/paulrobertlloyd/indiekit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/indiekit.git"
  },
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci",
    "dev": "nodemon indiekit.config.js",
    "start": "node indiekit.config.js",
    "lint:markdown": "markdownlint '**/*.md'",
    "lint:scripts": "xo '**/*.js'",
    "lint:styles": "stylelint '**/*.css'",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "c8 ava"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1 ",
    "ava": "^3.8.2",
    "c8": "^7.1.2",
    "dotenv": "^8.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^28.0.0",
    "husky": "^4.2.5",
    "ioredis": "^4.17.3",
    "ioredis-mock": "^4.21.0",
    "lerna": "^3.22.0",
    "markdownlint-cli": "^0.23.1",
    "mock-req-res": "^1.1.4",
    "nock": "^12.0.3",
    "nodemon": "^2.0.4",
    "sinon": "^9.0.2",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "supertest": "^4.0.2",
    "xo": "^0.32.0"
  },
  "ava": {
    "environmentVariables": {
      "NODE_ENV": "test",
      "SECRET": "test"
    }
  },
  "c8": {
    "all": true,
    "include": [
      "packages"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "ext": "css,js,json,njk,md"
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:import/errors",
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "import",
      "jsdoc"
    ],
    "rules": {
      "capitalized-comments": [
        "error",
        "always",
        {
          "ignorePattern": "c8"
        }
      ],
      "import/extensions": [
        "error",
        "always"
      ],
      "import/no-useless-path-segments": [
        "error",
        {
          "noUselessIndex": false
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "packageDir": [
            "./",
            "./packages/config-jekyll",
            "./packages/endpoint-media",
            "./packages/endpoint-micropub",
            "./packages/endpoint-share",
            "./packages/frontend",
            "./packages/indiekit",
            "./packages/store-github",
            "./packages/store-gitlab",
            "./packages/templates-yaml"
          ]
        }
      ],
      "unicorn/import-index": [
        "error",
        {
          "ignoreImports": true
        }
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "application": false
          }
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ]
        }
      }
    }
  }
}
