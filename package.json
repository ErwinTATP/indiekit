{
  "private": true,
  "name": "@paulrobertlloyd/indiekit",
  "version": "0.1.0",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "homepage": "https://paulrobertlloyd.github.io/indiekit/",
  "bugs": "https://github.com/paulrobertlloyd/indiekit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/indiekit.git"
  },
  "scripts": {
    "dev": "nodemon server",
    "start": "node server",
    "pretest": "redis-server --port 6380 --daemonize yes",
    "test": "ava",
    "test:watch": "ava --watch",
    "posttest": "redis-cli -p 6380 shutdown",
    "coverage": "c8 npm run test",
    "ci": "c8 ava"
  },
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "express": "^4.17.1",
    "got": "^11.1.4",
    "http-errors": "^1.7.3",
    "ioredis": "^4.17.0",
    "microformats-parser": "^1.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "ava": "^3.8.2",
    "c8": "^7.1.2",
    "dotenv": "^8.1.0",
    "eslint-plugin-jsdoc": "^25.4.2",
    "husky": "^4.2.5",
    "nock": "^12.0.3",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "xo": "^0.30.0"
  },
  "ava": {
    "environmentVariables": {
      "NODE_ENV": "test"
    },
    "verbose": true
  },
  "c8": {
    "all": true,
    "include": [
      "packages"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "jsdoc"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always",
        {
          "js": "always"
        }
      ]
    }
  }
}
