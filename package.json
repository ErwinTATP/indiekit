{
  "private": true,
  "name": "@paulrobertlloyd/indiekit",
  "version": "0.1.0",
  "description": "An IndieWeb publishing toolkit",
  "keywords": [
    "indieweb",
    "micropub"
  ],
  "author": {
    "name": "Paul Robert Lloyd",
    "url": "https://paulrobertlloyd.com"
  },
  "license": "MIT",
  "homepage": "https://paulrobertlloyd.github.io/indiekit/",
  "bugs": "https://github.com/paulrobertlloyd/indiekit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulrobertlloyd/indiekit.git"
  },
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci",
    "dev": "nodemon server",
    "start": "node server",
    "lint:markdown": "markdownlint '**/*.md'",
    "lint:scripts": "xo '**/*.js'",
    "lint:styles": "stylelint '**/*.css'",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "c8 ava"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "ava": "^3.8.2",
    "c8": "^7.1.2",
    "dotenv": "^8.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^25.4.2",
    "husky": "^4.2.5",
    "ioredis": "^4.17.1",
    "ioredis-mock": "^4.21.0",
    "lerna": "^3.21.0",
    "markdownlint-cli": "^0.23.1",
    "nock": "^12.0.3",
    "nodemon": "^2.0.4",
    "rewiremock": "^3.14.2",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "supertest": "^4.0.2",
    "xo": "^0.30.0"
  },
  "ava": {
    "environmentVariables": {
      "NODE_ENV": "test"
    },
    "verbose": true
  },
  "c8": {
    "all": true,
    "include": [
      "packages"
    ],
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "ext": "css,js,json,njk,md"
  },
  "xo": {
    "space": true,
    "extends": [
      "plugin:import/errors",
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "import",
      "jsdoc"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always"
      ],
      "import/no-useless-path-segments": [
        "error",
        {
          "noUselessIndex": false
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "packageDir": [
            "./",
            "./packages/app",
            "./packages/config-jekyll",
            "./packages/frontend",
            "./packages/templates-yaml"
          ]
        }
      ],
      "unicorn/import-index": [
        "error",
        {
          "ignoreImports": true
        }
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "application": false
          }
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js"
          ]
        }
      }
    }
  }
}
