{% extends "document.njk" %}

{% block content %}
  {{ summary({
    title: "Application",
    actions: [{
      text: "Edit",
      href: "/settings/application?referrer=/settings"
    }],
    rows: [{
      key: {
        text: "Name"
      },
      value: {
        text: app.name
      }
    }, {
      key: {
        text: "Language"
      },
      value: {
        text: app.locale | language
      }
    }, {
      key: {
        text: "Theme colour"
      },
      value: {
        text: "<span style=\"color:" + app.themeColor + "\" aria-hidden\"true\">‚óè</span> " + app.themeColor
      }
    }]
  }) }}

  {{ summary({
    title: "Publication",
    actions: [{
      text: "Edit",
      href: "/settings/publication?referrer=/settings"
    }],
    rows: [{
      key: {
        text: "Default configuration"
      },
      value: {
        text: publication.defaultConfigType | capitalize
      }
    }, {
      key: {
        text: "Custom configuration URL"
      },
      value: {
        text: publication.customConfigUrl or "Not set"
      }
    }]
  }) }}
{% endblock %}