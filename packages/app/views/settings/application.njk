{% extends "form.njk" %}

{% block fieldset %}
  {{ input({
    id: "name",
    name: "name",
    value: errors.name.value or app.name,
    classes: "input--width-20",
    label: {
      text: "Name"
    },
    errorMessage: {
      text: errors.name.msg,
      label: "Error"
    } if errors.name
  }) | indent(2) }}

  {{ select({
    id: "locale",
    name: "locale",
    classes: "input--width-20",
    label: {
      text: "Language"
    },
    items: [{
      value: "de",
      text: "de" | language,
      selected: app.locale == "de",
      disabled: true
    }, {
      value: "en",
      text: "en" | language,
      selected: app.locale == "en"
    }],
    errorMessage: {
      text: errors.locale.msg,
      label: "Error"
    } if errors.locale
  }) | indent(2) }}

  {{ input({
    id: "theme-color",
    name: "themeColor",
    value: errors.themeColor.value or app.themeColor,
    classes: "input--width-5",
    label: {
      text: "Theme colour"
    },
    type: "color",
    errorMessage: {
      text: errors.themeColor.msg,
      label: "Error"
    } if errors.themeColor
  }) | indent(2) }}

  {{ button({
    text: "Save changes" if referrer else "Save and continue"
  }) | indent(2) }}
{% endblock %}