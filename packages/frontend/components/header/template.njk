<header class="header">
  <div class="header__container">
    <div class="header__title">
      <a class="u-url" href="{{ opts.url }}">
        <span class="p-name">{{ opts.name }}</span>
      </a>
    </div>
{%- if opts.description %}
    <p class="header__description p-summary">{{ opts.description }}</p>
{%- endif %}
{%- if opts.navigation %}
    <nav class="header__navigation" aria-label="site">
    {%- for item in opts.navigation %}
      {%- if item.href and item.text %}
      <a href="{{ item.href }}">{{ item.text | safe }}</a>
      {%- endif %}
    {%- endfor %}
    </nav>
{%- endif %}
  </div>
</header>