{%- set classes = "banner" + (" banner--" + opts.type if opts.type) + (" " + opts.classes if opts.classes) -%}
<div class="{{ classes }}"
  {%- for attr, value in opts.attributes -%} {{ attr }}="{{ value }}"{% endfor %}>
  <div class="banner__container">
    <div class="banner__body s-linear">
      <p class="banner__text">{{- opts.text | markdown("inline") | safe -}}</p>
    </div>
  </div>
</div>