{%- from "article/macro.njk" import article -%}
{%- from "banner/macro.njk" import banner -%}
{%- from "bookmarklet/macro.njk" import bookmarklet -%}
{%- from "button/macro.njk" import button -%}
{%- from "error-summary/macro.njk" import errorSummary -%}
{%- from "fieldset/macro.njk" import fieldset -%}
{%- from "footer/macro.njk" import footer -%}
{%- from "header/macro.njk" import header -%}
{%- from "input/macro.njk" import input -%}
{%- from "select/macro.njk" import select -%}
{%- from "summary/macro.njk" import summary -%}
{%- from "textarea/macro.njk" import textarea -%}
<!DOCTYPE html>
<html lang="{{ application.locale }}" dir="ltr" class="h-x-app">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta name="theme-color" content="{{ application.themeColor }}"/>
    <link rel="stylesheet" href="{{ application.cssPath }}"/>
    <style>
      :root {
        --color-accent: {{ application.themeColor }}
      }
    </style>
    <title>{{ title + " - " if title }}{{ application.name }}</title>
  </head>
  <body>
    {{ header({
      url: application.url,
      name: application.name,
      description: application.description,
      navigation: application.navigation
    }) | indent(4) if not minimalui }}

    <main class="main" id="main">
      {{ banner({
        text: success if success else error,
        type: "success" if success else "error"
      }) | indent(6) if success or error }}
      {%- block main %}{% endblock %}
    </main>

    {{ footer({
      navigation: [{
        href: application.repository.url | replace('.git', '') + "/releases/tag/v" + application.version,
        text: "v" + application.version
      }]
    }) | indent() if not minimalui }}
  </body>
</html>