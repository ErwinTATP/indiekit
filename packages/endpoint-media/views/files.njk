{%- from "file/macro.njk" import file -%}
{% extends "document.njk" %}

{% block content %}
  {%- if files %}
  <ol class="no-bullets">
  {%- for item in files %}
    <li>
      {{ file({
        title: item.properties.filename,
        href: parentUrl + item._id,
        icon: item.properties["post-type"],
        meta: item.properties.url
      }) }}
    </li>
  {%- endfor %}
  </ol>
  {%- endif %}
{% endblock %}