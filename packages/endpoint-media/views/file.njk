{% extends "document.njk" %}

{% block content %}
  {% if type == "audio" %}
    <audio src="{{ url }}" controls>
  {% elif type == "photo" %}
    <img src="{{ url }}">
  {% elif type == "video" %}
    <video src="{{ url }}" controls>
  {% else %}
    <a href="{{ url }}" download>Download file</a>
  {% endif %}
  {{ summary({
    title: "File properties",
    rows: properties
  }) }}
{% endblock %}