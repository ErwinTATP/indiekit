{% extends "document.njk" %}

{% block content %}
  {% if type == "audio" %}
    <audio src="{{ url }}" controls>
  {% elif type == "photo" %}
    <img src="{{ url }}">
  {% elif type == "video" %}
    <video src="{{ url }}" controls>
  {% else %}
    <a href="{{ url }}" download>Download file</a>
  {% endif %}
  <p><time datetime="{{ published }}">
    <a href="{{ url }}">{{ published | date("PPPp", application.locale) }}</a>
  </time></p>
  {{ summary({
    title: "Properties",
    rows: properties
  }) }}
{% endblock %}