{% extends "document.njk" %}

{% block content %}
  <p><time datetime="{{ published }}">
    <a href="{{ url }}">{{ published | date("PPPp", application.locale) }}</a>
  </time></p>
  {{ summary({
    title: "Properties",
    rows: properties
  }) }}
  <details>
    <summary>Microformats for this post</summary>
<pre>{{ mf2 | dump(2) }}</pre>
  </details>
{% endblock %}